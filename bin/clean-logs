#!/usr/bin/env bash

log_dir=/var/log
tmp_file=/tmp/.tmp_log

for path in "$log_dir"/*; do
	if [ -f "$path" ]; then 
		tail -n 500 "$path" > "$tmp_file"
		cat "$tmp_file" > "$path"
	fi
done


tail -n 500 /var/log/portage/elog/summary.log > "$tmp_file" 
cat "$tmp_file" > /var/log/portage/elog/summary.log
